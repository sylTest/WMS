<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '编辑');
            $('#fm').form('load', row);
            $('#fm .easyui-validatebox').validatebox({
                required: true
            });
            if (row.Status == '启用') {
                $('#cc').combo('setValue', true).combo('setText', row.Status);
            } else {
                $('#cc').combo('setValue', false).combo('setText', row.Status);
            }
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
            $('#cc').combo({
                hasDownArrow: true
            });
            url = '/Role/Edit/?RoleID=' + row.RoleID;
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
   